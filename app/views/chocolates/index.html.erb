
<%= javascript_include_tag "application" %>

<h1>Listing chocolates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chocolates.each do |chocolate| %>
  <tr>
    <td><%= chocolate.name %></td>
    <td style="text-align:justify;"><%= chocolate.description %></td>
    <td><%= link_to 'Show', chocolate %></td>
    <td><%= link_to 'Edit', edit_chocolate_path(chocolate) %></td>
    <td><%= link_to 'Destroy', chocolate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

