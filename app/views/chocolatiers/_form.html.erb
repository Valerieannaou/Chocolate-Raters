<%= form_for(@chocolatier) do |f| %>
  <%#= f.error_notification %>
    <% if @chocolatier.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@chocolatier.errors.count, "error") %> prohibited this chocolate from being saved:</h2>

          <ul>
            <% @chocolatier.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div id="chocolatier-form">
      <div class="field">
        <div class="required-star">*</div>
        <%= f.text_field :name, :placeholder => 'Name' %>

      </div>
      <div class="field">
        <%= f.text_field :address, :placeholder => 'Address' %>
      </div>
      <div class="field">

        <%= f.text_field :city, :placeholder => 'City' %>
      </div>
      <div class="field">
         <div class="required-star">*</div>
        <%= f.country_select :country,["United States"] %>

      </div>
      <div class="field">
        <%= f.text_field :state, :placeholder => 'State' %>
      </div>
      <div class="field">
        <%= f.text_field :zip_code , :placeholder => 'Zip code' %>
      </div>
      <div class="field">
        <%= f.text_field :chocolatier_type, :placeholder => 'Chocolatier type' %>
      </div>
      <div class="field">
        <div class="required-star">*</div>
        <%= f.text_field :chocolatier_url , :placeholder => 'Url'%>

      </div>
      <div class="field">
        <%= f.email_field :email , :placeholder => 'Email' %>
      </div>
      <div class="field">
        <%= f.phone_field :phone , :placeholder => 'phone' %>
      </div>
      <%#= hidden_field_tag "user_id", current_user.id  %>
      <%#= f.hidden_field :user_id, :value => current_user.id %>
      <%#= f.hidden_field :stats, :value => 0 %>


  </div>

  <div id="chocolatier-submit-button">
    <%= f.button :submit %>
  </div>
<% end %>
