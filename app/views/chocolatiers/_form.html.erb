<%= form_for(@chocolatier) do |f| %>
  <%#= f.error_notification %>
    <% if @chocolatier.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@chocolatier.errors.count, "error") %> prohibited this chocolate from being saved:</h2>

          <ul>
            <% @chocolatier.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="form-inputs">
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address %>
      </div>
      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <%= f.label :country %><br />
        <%= f.country_select :country  %>
      </div>
      <div class="field">
        <%= f.label :state %><br />
        <%= f.text_field :state %>
      </div>
      <div class="field">
        <%= f.label :zip_code %><br />
        <%= f.text_field :zip_code %>
      </div>
      <div class="field">
        <%= f.label :chocolatier_type %><br />
        <%= f.text_field :chocolatier_type %>
      </div>
      <div class="field">
        <%= f.label :chocolatier_url %><br />
        <%= f.text_field :chocolatier_url %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone %>
      </div>
      <%#= hidden_field_tag "user_id", current_user.id  %>
      <%#= f.hidden_field :user_id, :value => current_user.id %>
      <%#= f.hidden_field :stats, :value => 0 %>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
