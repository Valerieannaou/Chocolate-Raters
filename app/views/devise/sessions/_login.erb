<%= stylesheet_link_tag 'popup' %>
<div id="login-form">
<div id="login"><p>Log in</p></div>
<div id="facebook-login-button"><%= link_to (image_tag('sign-in-with-facebook.png')), user_omniauth_authorize_path(:facebook) %>
  <p>or</p>
</div>
 <div id="form">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, :placeholder =>'Email' %></div>

    <div class="field">
      <%= f.password_field :password, :placeholder =>'Password' %></div>
     <div id="remember-me">
    <% if devise_mapping.rememberable? -%>
        <div id="chk-box"><%= f.check_box :remember_me %></div> <div id="chk-txt"><P>Remember me</P> </div>
       <div id="forgot-password"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
    <% end %>
       </div>

    <div id="submit"><%= f.button "Sign in" %></div>
       </div>
<% end %>
   <div id="sign-up"><span id="sign-up-que">Don't have an account? </span> <%= link_to "Sign up", new_registration_path(resource_name) %></div>
</div>
