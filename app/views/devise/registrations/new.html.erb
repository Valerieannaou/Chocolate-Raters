<div id="sign_up">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div><%#= f.label :user_name %><br />
    <%= f.text_field :user_name , :placeholder => 'User Name'%></div>

  <div><%#= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :placeholder => 'Valid Email' %></div>

  <div><%#= f.label :password %><br />
  <%= f.password_field :password, :placeholder => 'Password' %></div>

  <div><%#= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password' %></div>
    <%= f.hidden_field :admin , :value=> 0 %>

    <div><%= f.label :photo %><br />
    <%= f.file_field :photo ,:class => 'file_field' %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>