    <div class="trading-chocolate-rating">
      <p><%= @chocolates[1].name %></p>
      <div class="rating-starts"><%= @chocolates[1].ratings.average(:rate) %></div>
    </div>
    <div class="trading-chocolate-overlay"></div>
  </div>
      <% end %>
</div>










