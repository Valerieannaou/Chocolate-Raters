<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Chocolate-Raters</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">

  <%= stylesheet_link_tag "bootstrap.min","bootstrap-responsive.min","style" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>

<body>

<div class="navbar-wrapper">
  <div class="navbar">
    <div class="content-wrapper">
      <div class="container">
        <div class="row-fluid">
          <div class="span6">
            <div id="header-links">
              <%= link_to (image_tag 'header-links.png'),root_path %>
            </div>
            <div id="header-logo">
              <%= link_to (image_tag 'logo.png'), root_path %>
            </div>
          </div>
          <div class="span6" id="login-signup-span">
            <div id="logged-in-user-pic">
              <% if current_user %>
                  <% if !(current_user.photo.blank?) %>
                      <%= image_tag current_user.photo %>
                  <% elsif !(current_user.fb_photo.blank?) %>
                      <%= image_tag current_user.fb_photo %>
                  <% else %>
                      <%= image_tag 'default_pro.jpg'  %>
                  <% end %>
              <% end %>
            </div>
            <div class="clear"></div>
            <div id="login-signup">
              <% if user_signed_in? %>
                  Logged in as <strong><%= current_user.user_name %></strong>.
                  <%= link_to "Edit profile", edit_user_registration_path %> |
                  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
              <% else %>
                  <%= link_to "Sign up", new_user_registration_path %> |
                  <%= link_to "Login", new_user_session_path %> |
                  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "popup", :"data-width" => 600, :"data-height" => 400 %>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="navbar-inner content-wrapper" id="main-menu">
      <div class="container" id="main-menu-container">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'Chocolates', chocolates_path %></li>
            <li><%= link_to 'Add chocolate', new_chocolate_path %></li>
            <li><%= link_to 'Chocolatiers', chocolatiers_path %> </li>
            <li><%= link_to 'Add chocolatier', new_chocolatier_path %></li>
          </ul>
        </div>
        <!--/.nav-collapse -->
      </div>
    </div>
  </div>
</div>

<!-- Carousel
    ================================================== -->
<div id="myCarousel" class="carousel slide">
  <div id="over-slideshow"></div>

  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slide-01.jpg'%>

      <div class="container">
        <div class="carousel-caption hidden-phone">
          <h1>Top Rated Dark Chocolate</h1>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slide-02.jpg'%>

      <div class="container">
        <div class="carousel-caption hidden-phone">
          <h1>Another example headline.</h1>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slide-03.jpg'%>

      <div class="container">
        <div class="carousel-caption hidden-phone">
          <h1>One more for good measure.</h1>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slide-01.jpg'%>

      <div class="container">
        <div class="carousel-caption hidden-phone">
          <h1>One more for good measure.</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="content-wrapper">
    <div class="container">
      <div class="row-fluid">
        <div class="span12" id="search-box-on-slider">
          <form action="<%= show_search_chocolates_path %>" method="get">
            <input type="text" name="search" placeholder="Enter chocolate/ chocolatier/ place to either rate or find">
            <button id="search-box-button"><%= image_tag 'search-button.png'%></button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="content-wrapper">
    <ol class="carousel-indicators carousel-indicator-button hidden-phone">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
      <div style="width: 108px; height: 17px; position: absolute;left: 0; top: 0;"></div>
    </ol>
  </div>
</div>

<%= yield %>
<%= render partial: 'shared/footer' %>



